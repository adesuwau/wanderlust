<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Trip name</th>
      <th>Trip date</th>
      <th>Description</th>
      <th>Fave memory</th>
      <th>Photo</th>
      <th>City</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.trip_name %></td>
        <td><%= trip.trip_date %></td>
        <td><%= trip.description %></td>
        <td><%= trip.fave_memory %></td>
        <td><%= trip.photo %></td>
        <td><%= trip.city.name %></td>
        <td><%= trip.user.username %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

